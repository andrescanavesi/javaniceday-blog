
      <script async="async" defer="true" charset="UTF-8" type="application/ld+json">
          {
          "@context":"http://schema.org",
          "@type": "BlogPosting",
          "image": "{{post.featured_image_url}}",
          "url": "{{linkToThisPage}}",
          "headline": "{{post.title}}",
          "dateCreated": "{{post.created_at_friendly_2}}",
          "datePublished": "{{post.created_at_friendly_2}}",
          "dateModified": "{{post.updated_at_friendly_2}}",
          "inLanguage": "en-US",
          "author": {
            "@type": "Person",
            "name": "Andres Canavesi",
            "url": "https://www.javaniceday.com"
          },
          "mainEntityOfPage": "True",
          "keywords": "{{post.tags}}",
          "articleBody": "{{post.summary}}",
          "publisher": {
            "@type": "Organization",
            "name": "Andres Canavesi"
           }
        }
      </script>



<div class="container">

     <!-- Title -->
 <h1>{{post.title}}</h1>
	<h3>
		<small class="text-muted lead">{{post.sub_title}}</small>
	</h3>
 <hr>

 <!-- Date/Time -->
 <div class="d-flex mb-3">
	 <div>
		 <a href="{{imagesBaseUrl}}javaniceday.com/andres-canavesi-linkedin-2021.jpg">
		 <img class="lozad" data-src="https://res.cloudinary.com/dniiru5xy/image/upload/w_50,h_50,c_thumb,g_face,r_max/v1620493572/javaniceday.com/andres-canavesi-linkedin-2021.jpg"
              alt="Andres Canavesi" />
         </a>
     </div>
	 </a>
	 <div class="ms-2 pt-3"><a href="/about/andres-canavesi" class="text-decoration-none"><span>Andrés Canavesi</span></a></div>
	 <div class="ms-2 pt-3 "><span class="text-muted">{{post.created_at_friendly}}</span></div>
 </div>





 <!-- Post Content -->
    <div class="container" id="postContent">
        <div class="row">
            <div class="col">

                <div class="postContent mb-2">{{{post.summary}}}</div>
                <!-- Preview Image -->
                <img class="lozad img-fluid rounded mx-auto"
                     src="{{post.default_loading_image}}"
                     data-src="{{post.featured_image_url}}" alt="featured image">

                <hr>

                <div class="postContent">{{{post.content}}}</div>
            </div>


        </div>

        <div class="mt-3">
            {{#each post.tags_array}}
                <a href="/tag/{{this}}" class="btn btn-secondary">{{this}}</a>
            {{/each}}
            <hr/>
        </div>

        <!-- Google search box -->
        <div class="my-3">
            <script async src="https://cse.google.com/cse.js?cx=dd95798dbbf86f824"></script>
            <div class="gcse-search"></div>
        </div>

      {{#if showDisqus}}
        <!--START Disqus -->
        <div class="my-3">
            <div id="disqus_thread"></div>
            <script>

                const disqus_config = function () {
                this.page.url = "{{linkToThisPage}}";
                this.page.identifier = "{{post.id}}-{{post.title_seo}}";
                };

                (function() {
                    const d = document, s = d.createElement('script');
                    s.src = 'https://https-www-javaniceday-com.disqus.com/embed.js';
                    s.setAttribute('data-timestamp', +new Date());
                    (d.head || d.body).appendChild(s);
                })();
            </script>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        </div>
          <!--END Disqus -->
      {{/if}}

    </div>





    {{#if adsenseEnabled}}
		<!-- START Adsense in article -->
		<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
		<ins class="adsbygoogle"
		     style="display:block; text-align:center;"
		     data-ad-layout="in-article"
		     data-ad-format="fluid"
		     data-ad-client="ca-pub-9559827534748081"
		     data-ad-slot="8954602424"></ins>
		<script>
			(adsbygoogle = window.adsbygoogle || []).push({});
		</script>
		<!-- END Adsense -->
    {{/if}}

{{#if isAuthenticated}}
  <a href="{{post.url_edit}}">Edit post</a>
{{/if}}

{{#if showRelatedPosts}}
  <div id="related" class="mt-3">
    <h2>More posts</h2>

	  <!-- New view-->
	  <div>
        {{#each relatedPosts}}

	    <div class="container">
		    <div class="row">
			    <div class="col-sm-3 p-2">
				    <img class="lozad card-img-top"
				         src="{{this.default_thumb_loading_image}}"
				         data-src="{{this.thumb_image_url}}" alt="image post">
			    </div>
			    <div class="col-sm-9 p-0 pl-2">
				    <h3 class="mb-0"><a href="/post/{{this.title_seo}}" class="text-decoration-none">{{this.title}}</a></h3>
				    <div class="text-muted">{{this.sub_title}}</div>

				    <div>
					    <a href="/about/andres-canavesi" class="text-decoration-none"><small>Andrés Canavesi</small></a>
					    <span class="text-muted"> - </span>
					    <small class="text-muted">{{this.created_at_friendly}}</small>
					    <span class="text-muted"> - </span>
					    <small class="text-muted">www.javaniceday.com</small>
				    </div>

                    <div>
                        {{#each this.tags_array}}
                            <a href="/tag/{{this}}" class="btn btn-secondary">{{this}}</a>
                        {{/each}}
                    </div>

			    </div>
		    </div>

	    </div>
	    <hr/>

    {{/each}}
  </div>

  </div> <!-- END related posts -->
{{/if}}

</div> <!-- END container -->
