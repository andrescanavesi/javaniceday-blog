      <script async="async" defer="true" charset="UTF-8" type="application/ld+json">
          {
          "@context":"http://schema.org",
          "@type": "BlogPosting",
          "image": "{{post.featured_image_url}}",
          "url": "{{post.linkToThisPage}}",
          "headline": "{{post.title}}",
          "dateCreated": "{{post.created_at_friendly_2}}",
          "datePublished": "{{post.created_at_friendly_2}}",
          "dateModified": "{{post.updated_at_friendly_2}}",
          "inLanguage": "en-US",
          "author": {
            "@type": "Person",
            "name": "Andres Canavesi",
            "url": "https://javaniceday.com"
          },
          "mainEntityOfPage": "True",
          "keywords": {{post.tags_array}},
          "articleBody": "{{post.content}}"
        }
      </script>
  


<div class="container">

     <!-- Title -->
 <h1>{{post.title}}</h1>

 <hr>

 <!-- Date/Time -->
 <p>Posted on {{post.created_at_friendly}}</p>

 <hr>

 <!-- Preview Image -->
 <img class="img-fluid rounded" src="{{post.featured_image_url}}" alt="Featured image">

 <hr>

 <!-- Post Content -->
 {{{post.content}}}
 
 <hr>

{{#if isAuthenticated}}
  <a href="{{post.url_edit}}">Edit post</a>
{{/if}}

  <div id="related">
    <h2>More posts</h2>
    <div class="card-columns">
      {{#each relatedPosts}}
        <div class="card">
          <img class="card-img-top" src="{{this.featured_image_url}}" alt="Post image cap">
          <div class="card-body">
            <a href="/post/{{this.title_seo}}">
              {{this.title}}
            </a>
            
            <p class="card-text">{{this.summary}}</p>
            <p class="card-text">
              <small class="text-muted">Posted on {{this.created_at_friendly}}</small>
            </p>
          </div>
        </div>
      {{/each}}
    </div>

  </div> <!-- END related posts -->
    
</div> <!-- END container -->
